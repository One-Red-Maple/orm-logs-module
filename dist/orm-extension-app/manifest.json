{
  "applications": {
      "gecko": {
        "id": "ericd.dion@oneredmaple.com",
        "strict_min_version": "53.0"
      }
    },
  "name": "One Red Maple Ecommerce Extension",
  "version": "3.4",
  "manifest_version": 2,
  "description": "Driving Business to your local community, one sale at a time",
  "homepage_url": "http://oneredmaple.com",
  "icons": {
    "16": "assets/icons/logo_16.png",
    "32": "assets/icons/logo_32.png",
    "48": "assets/icons/logo_48.png",
    "64": "assets/icons/logo_64.png",
    "128": "assets/icons/logo_128.png"
  },
  "default_locale": "en",
  "permissions": [
    "storage",
    "geolocation"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "inject.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],

  "web_accessible_resources": [
    "*",
    "assets/*"
  ]
}